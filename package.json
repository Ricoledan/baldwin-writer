{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "baldwin-writer",
  "version": "0.3.1",
  "description": "AI-Powered Content & Article Production Platform using BMAD",
  "keywords": [
    "content-writing",
    "article-production",
    "ai-agents",
    "bmad",
    "creative-writing",
    "content-creation"
  ],
  "homepage": "https://github.com/Ricoledan/baldwin-writer#readme",
  "bugs": {
    "url": "https://github.com/Ricoledan/baldwin-writer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ricoledan/baldwin-writer.git"
  },
  "license": "MIT",
  "author": "Rico Ledan",
  "main": "tools/cli.js",
  "bin": {
    "baldwin": "tools/bmad-npx-wrapper.js",
    "baldwin-init": "tools/installer/bin/baldwin-init.js",
    "baldwin-writer": "tools/bmad-npx-wrapper.js",
    "bmad": "tools/bmad-npx-wrapper.js",
    "bmad-method": "tools/bmad-npx-wrapper.js"
  },
  "files": [
    "dist/.baldwin/",
    "tools/",
    "common/",
    "expansion-packs/",
    "README.md"
  ],
  "scripts": {
    "build": "node tools/cli.js build",
    "build:agents": "node tools/cli.js build --agents-only",
    "build:core": "node tools/build-core.js",
    "build:teams": "node tools/cli.js build --teams-only",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "fix": "npm run format && npm run lint:fix",
    "flatten": "node tools/flattener/main.js",
    "format": "prettier --write \"**/*.{js,cjs,mjs,json,md,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,cjs,mjs,json,md,yaml}\"",
    "install:bmad": "node tools/installer/bin/bmad.js install",
    "lint": "eslint . --ext .js,.cjs,.mjs,.yaml --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.cjs,.mjs,.yaml --fix",
    "list:agents": "node tools/cli.js list:agents",
    "prepare": "husky",
    "prepublishOnly": "npm run build:core && npm run validate && npm run build -- --no-clean",
    "release:major": "npm version major -m 'chore(release): %s'",
    "release:minor": "npm version minor -m 'chore(release): %s'",
    "release:patch": "npm version patch -m 'chore(release): %s'",
    "validate": "node tools/cli.js validate",
    "preversion": "npm run validate",
    "version": "npm run changelog && git add CHANGELOG.md",
    "postversion": "git push && git push --tags"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "**/*.yaml": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@excalidraw/mermaid-to-excalidraw": "^1.1.3",
    "@kayvan/markdown-tree-parser": "^1.6.1",
    "bmad-method": "^4.44.1",
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "comment-json": "^4.2.5",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "ignore": "^7.0.5",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.34.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-yml": "^1.18.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "yaml-eslint-parser": "^1.3.0",
    "yaml-lint": "^1.7.0"
  },
  "engines": {
    "node": ">=20.10.0"
  }
}
